{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "build",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2024",
        "baseUrl": ".",
        "paths": {
            "@root/*": ["./src/*"]
        }
    },
    "compileOnSave": true,
    "include": [
        "src"
    ]
}